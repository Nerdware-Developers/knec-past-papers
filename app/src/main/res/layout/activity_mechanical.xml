<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DDFC"
    tools:context=".Activities.Mechanical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/ree"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"
            android:id="@+id/mechanical_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mechanical"
            android:layout_centerInParent="true"
            android:textColor="@color/lavender"
            android:textStyle="bold"
            android:textSize="25sp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mechanical_mainRecycler"
        android:layout_below="@id/mech1"
        android:layout_above="@id/mech2"
        android:padding="8sp"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/mech1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ree"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2829905592411826/4833412285" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/mech2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2829905592411826/7064823950" />

</RelativeLayout>